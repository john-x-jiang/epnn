{
    "exp_name": "demo",
    "exp_id": "23",
    
    "model": {
        "type": "DomainInvariantDynamics",
        "args": {
            "num_channel": [
                1,
                8,
                16,
                32,
                64,
                128,
                256
            ],
            "latent_dim": 64,
            "obs_dim": 96,
            "rnn_type": "gcgru"
        }
    },

    "data":{
        "data_set": "HeartDomainDataLoader",
        "data_dir": "data/",
        "data_names": ["EC_seg_10"],
        "signal_type": "egm",
        "num_meshes": [568],
        "seq_len": 101,
        "graph_method": "bipartite",
        "num_workers": 1,
        "k_shot": 5
    },

    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 1e-3,
            "amsgrad": false,
            "betas": [0.9, 0.999]
        }
    },
    "lr_scheduler": 0,

    "loss": "domain_recon_loss",
    "metrics": [
        "mse", "tcc", "scc"
    ],

    "batch_size": 2,
    "ecgi": 0,
    "device": 0,
    "training": {
        "epochs": 300,
        "overfit_single_batch": false,

        "save_period": 20,
        "signal_source": "heart",
        "omit": 5,
        "k_shot": 5,

        "monitor": "min val_loss",
        "early_stop": 100,

        "torso_len": 120,
        "loss_type": "mse",

        "kl_args":{
            "min_annealing_factor": 0.0,
            "anneal_update": 200,
            "elbo": "sum",
            "lambda": 1e-4
        }
    },
    "evaluating": {
        "signal_source": "heart",
        "torso_len": 120,
        "omit": 5,
        "k_shot": 5
    },
    
    "best_model": "m_best"
}
